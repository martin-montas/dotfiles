# Custom widget to paste from system clipboard
function zle-paste-clipboard() {
  LBUFFER+=$(wl-paste)
}
# Register the widget
zle -N zle-paste-clipboard

# Bind 'p' in vi command mode to the widget
bindkey -M vicmd 'p' zle-paste-clipboard

